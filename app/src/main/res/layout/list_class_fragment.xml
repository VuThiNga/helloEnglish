                        android:layout_gravity="center"
                        android:text="class"
                        android:paddingTop="@dimen/pading_big"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textSizeSmall" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/class_11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_hor"
                    android:layout_gravity="left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_item_class_11"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="11"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textSizeOverBig" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="class"
                        android:paddingTop="@dimen/pading_big"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textSizeSmall" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/class_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_hor"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_item_class_12"
